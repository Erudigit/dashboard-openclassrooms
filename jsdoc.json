{
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "readme.md",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/better-docs"
    },
    "tags": {
        "allowUnknownTags": ["component"]
    },
    "plugins": [
        "node_modules/better-docs/component"
    ],
    "source": {
        "include": ["./src"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    }
}